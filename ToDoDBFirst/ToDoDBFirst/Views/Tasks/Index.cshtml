@using ToDoDBFirst.Models
@using ToDoDBFirst.Extensions
@model List<TaskViewModel>

<h1><b>Список дел</b></h1>

@Html.ActionLink("Добавить запись", "Create", "Tasks")

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                День недели
            </th>
            <th>
                Задача
            </th>
            <th>
                Исполнитель
            </th>            
            <th>
                Фото исполнителя
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
        <tr>
            <td>
                @string.Join(", ", task.DayOfWeeks.Select(x => $"{x.DayOfWeekName}"))
            </td>
            <td>
                @task.Name

            </td>            
            <td>
                @task.Performer.Name
            </td>
            <td>
                <img src="/Performers/GetImage/@task.PerformerId" style="max-width: 50px; max-height: 100px;" />
            </td>
            <td>
                @Html.ActionLink("Удалить", "Delete", "Tasks", new { id = task.Id }, new { })
                @Html.ActionLink("Изменить", "Edit", "Tasks", new { id = task.Id }, new { })
            </td>
        </tr>
        }
    </tbody>
</table>